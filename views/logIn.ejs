<%- include("partials/header", {isAuthenticated: false}) -%>

    <div class="col-md-4 mx-2 mx-md-auto my-5">

        <h1 class="text-center">Login</h1>
        <!-- display error if any while submitting the form -->
        <% if(error) { %>
            <div class="alert alert-danger" role="alert">
                <%= error %>
            </div>
        <% } %>
            <!-- login form section -->
            <div class="container-centre">
                <form action="/log-in" method="POST">
                    <div class="form-group">
                        <label>Your Username</label>
                        <input class="form-control col-md-12 col-sm-12 col-xs-12" type="text" name="userName"
                            autocomplete="off" value="<%= data.userName %>" required>
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input class="form-control col-md-12 col-sm-12 col-xs-12" type="password" name="password"
                            autocomplete="off" value="<%= data.password %>" required>
                    </div>
                    <div class="text-center">
                        New User? <a href="/sign-up">Sign Up</a>
                    </div>
                    <button class="btn btn-primary log-in-btn" type="submit" name="log-in">Log In</button>
                </form>
            </div>

<%- include("partials/footer") -%>